<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/idTVCenterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/ic_hospital"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:text="Center Name" />

    <TextView
        android:id="@+id/idTVCenterLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@+id/idTVCenterName"
        tools:ignore="MissingConstraints"
        tools:text="Center Address" />

    <TextView
        android:id="@+id/idTVCenterTiming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/ic_timings"
        app:layout_constraintTop_toBottomOf="@+id/idTVCenterLocation"
        tools:ignore="MissingConstraints"
        tools:text="Center Timing" />

    <TextView
        android:id="@+id/idTVVaccineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        app:drawableLeftCompat="@drawable/ic_vaccine"
        app:layout_constraintTop_toBottomOf="@+id/idTVCenterTiming"
        tools:ignore="MissingConstraints"
        tools:text="Vaccine Name" />

    <TextView
        android:id="@+id/idTVPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTVCenterTiming"
        tools:ignore="MissingConstraints"
        tools:text="Vaccine Price" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/idTVAgeLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/idTVVaccineName"
        tools:ignore="MissingConstraints"
        tools:text="Age Limit" />

    <TextView
        android:id="@+id/idTVAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTVVaccineName"
        tools:ignore="MissingConstraints"
        tools:text="Availability" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#858585"
        app:layout_constraintTop_toBottomOf="@+id/idTVAgeLimit"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>